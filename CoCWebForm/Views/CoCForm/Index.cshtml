@model CoCWebForm.Models.CoCDataModel
@{  
    ViewBag.Title = $"CoC Form-";  
} 
<script type="text/javascript">
    function ValidateSampleData(){
        if($(".validateSampleId").attr('value') == "0" || $(".validateSampleId").attr('value') ==""){
            alert("Enter Valid Sample ID");
            return false;
        }
        else if($(".validateMediaType").attr('value') == ""){
            alert("Enter Valid Media Type");
            return false;
        }
        else if($(".validateIsoClass").attr('value') == ""){
            alert("Enter Valid ISO Class");
            return false;
        }
        else if ($(".validateSampleType").attr('value') == "") {
            alert("Enter Valid Sample Type");
            return false;
        }
        else if ($(".validateMediaLotNumber").attr('value') == "") {
            alert("Enter Valid Media Lot Number");
            return false;
        }
        else if ($(".validateSampleVol").attr('value') == "") {
            alert("Enter Valid Sample Volume/Measure");
            return false;
        }
        return true;
    }
    </script>
